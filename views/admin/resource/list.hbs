    <div class="tbl-basic cell td-h4 mt10">
        <div class="tbl-header">
            <div class="caption">총 <b>{{data.meta.totalItems}}</b>개 글이 있습니다</div>
            <!--
            <div class="rightSet">
            <a href="#" class="btn green small icon-excel">엑셀 다운로드</a>
            </div>
            -->
        </div>
        <table>
            <colgroup>
                <col width="50">
                <col width="100">
                <col>
                <col width="140">
                <col width="160">
            </colgroup>
            <thead>
            <tr>
                <th>
                    <a href="#" class="">No</a>
                </th>
                <th>
                    <a href="#" class="sort" data-field="board_type">Type</a>
                </th>
                <th>
                    <a href="#" class="sort" data-field="title">Title</a>
                </th>
                <th>
                    <a href="#" class="sort" data-field="id">Attachment</a>
                </th>
                <th>
                    <a href="#" class="sort" data-field="date">Date</a>
                </th>
            </tr>
            </thead>

            <tbody>
            {{#if data.items }}
                {{#each data.items}}
                    <tr>
                        <td>
                            {{itemNumber ../data.meta.totalItems
                                         ../data.meta.currentPage
                                         ../data.meta.itemsPerPage
                                         ../data.meta.itemCount
                                         @index}}
                        </td>
                        <td style="text-transform: capitalize">{{this.board_type}}</td>
                        <td>
                            <a href="/admin/{{../menu}}/{{this.id}}">{{this.title}}</a>
                        </td>
                        <td>
                            {{#each this.files}}
                                <a href="/admin/uploads/{{this.filename}}"
                                   class="doc-download"
                                   title="{{this.origin_name}}"
                                   download></a>
                            {{/each}}
                        </td>
                        <td>{{dateFormat this.created_at 'yyyy-MM-dd HH:mm'}}</td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="6" class="td_empty">
                        <div class="empty_list" data-text="등록된 게시물이 없습니다."></div>
                    </td>
                </tr>
            {{/if}}
            </tbody>
        </table>

        {{> paginations/type01 }}

        <div class="btnSet">
            <a href="/admin/{{menu}}/create" class="btn large">등록하기</a>
        </div>
